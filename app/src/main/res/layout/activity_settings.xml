<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Stops:"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/numberOfStopsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Speed (mph):"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/startSpeedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target Speed (mph):"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/targetSpeedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gap Distance (miles):"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/gapDistanceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Braking Intensity:"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/brakingIntensitySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/addStageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Stage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooldown Distance (miles):"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/cooldownDistanceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/addCooldownButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Cooldown Stage"
            android:layout_marginTop="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/saveStagesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save Stages"/>

        <!-- New fields for speed thresholds -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed Tolerance (mph):"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/toleranceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Speed Overage (mph):"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/maxOverageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Speed Underage (mph):"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/minUnderageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Thresholds"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>